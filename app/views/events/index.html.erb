<table>
  <% @events.each do |event| %>
    <tr>
      <td><%= link_to event.name, event_path(event) %></td>
      <td><%= button_to 'Edit', edit_event_path(event), method: 'get'%></td>
      <td><%= button_to 'Remove', event_path(event), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>
<%= link_to "Add a New Event", new_event_path %>
